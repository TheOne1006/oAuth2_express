{
    # 环境设置
    "env": {
        "es6": true,
        "node": true
    },
    "globals": {
  },
    # eslint 推荐配置
    "extends": "eslint:recommended",
    # 自定义规则
    "rules": {
        # 缩进 2 空格
        "indent": [
            "error",
            4
        ],
        "no-console":[
            "off"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
